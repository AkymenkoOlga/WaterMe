<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_humidity_diagram"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.project.gta.demo.HumidityGraph">

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:id="@+id/graph" />

    <Button
        android:text="Refresh"
        android:id="@+id/BTNrefresh"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:backgroundTint="@color/water"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RadioGroup"
        android:layout_below="@+id/graph"
        android:layout_alignParentStart="true">

        <TextView
            android:text="@string/showCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_below="@+id/BTNrefresh"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginTop="4dp" />

        <RadioButton
            android:text="@string/hours24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Radio24h"
            android:layout_below="@+id/BTNrefresh"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:layout_marginTop="10dp" />

        <RadioButton
            android:text="@string/days3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Radio3days"
            android:layout_below="@+id/Radio24h"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:layout_marginTop="10dp"/>

        <RadioButton
            android:text="@string/week1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Radio1week"
            android:layout_below="@+id/Radio3days"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:layout_marginTop="10dp"/>

        <RadioButton
            android:text="@string/optimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/RadioGroup"
            android:layout_toEndOf="@+id/RadioGroup"
            android:id="@+id/RadioOptimal"
            android:layout_weight="1"
            android:layout_marginTop="10dp"/>

    </RadioGroup>

</RelativeLayout>



